# ==================================================
# ALUNEX PULSE - FRONTEND ENVIRONMENT CONFIGURATION
# ==================================================
# Copy this file to .env and update with your actual values

# ==================================================
# BACKEND API CONFIGURATION
# ==================================================
# Backend API URL (without trailing slash)
# Development: http://localhost:5000/api
# Production: https://your-api-domain.com/api
VITE_API_URL=http://localhost:5000/api

# ==================================================
# APPLICATION CONFIGURATION
# ==================================================
# Application Name (displayed in UI)
VITE_APP_NAME=Alunex Pulse

# Application Environment
# Options: development, staging, production
VITE_ENV=development

# ==================================================
# OAUTH CONFIGURATION (Optional)
# ==================================================
# Enable Google OAuth Login
VITE_ENABLE_GOOGLE_LOGIN=true

# Enable Microsoft OAuth Login
VITE_ENABLE_MICROSOFT_LOGIN=true

# ==================================================
# FEATURE FLAGS (Optional)
# ==================================================
# Enable Dark Mode Toggle
VITE_ENABLE_DARK_MODE=true

# Enable Real-time Chat
VITE_ENABLE_CHAT=true

# Enable File Uploads
VITE_ENABLE_FILE_UPLOAD=true

# Enable Report Exports (PDF/Excel)
VITE_ENABLE_REPORTS=true

# ==================================================
# NOTES
# ==================================================
# 1. All Vite environment variables must start with VITE_
# 2. NEVER commit the actual .env file with real API keys
# 3. Update VITE_API_URL to match your backend URL
# 4. For production, ensure the API URL uses HTTPS
# 5. Restart the dev server after changing env variables
